<Window x:Class="View.popEmail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:viewModel="clr-namespace:View.ViewModel"
        mc:Ignorable="d"
        Title="popEmail" Height="480" Width="600">
    <Window.DataContext>
        <viewModel:ViewModelBase></viewModel:ViewModelBase>
    </Window.DataContext>
    <StackPanel>
        <TextBlock Text="Tiêu đề:" Margin="20 5"></TextBlock>
        <TextBox Margin="20 10" Text="{Binding TitleEmail}"></TextBox>
        <TextBlock Text="Nội dung:" Margin="20 5"></TextBlock>
        <RichTextBox Height="278" Margin="20 10">
            <FlowDocument>
                <Paragraph>
                    <Run Text="{Binding ContentEmail}"></Run>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button Content="OK" Width="50" Margin="0 10" Command="{Binding ConfirmMailCommand}" ></Button>
    </StackPanel>
</Window>

